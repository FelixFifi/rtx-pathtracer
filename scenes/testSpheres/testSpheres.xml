    <shape type="sphere">
        <point name="center" x="0" y="0" z="0"/>
        <float name="radius" value="2"/>

        <bsdf type="conductor">
            <rgb name="reflectance" value="1 1 1"/>
            <spectrum name="eta" value="0.370"/>
            <spectrum name="k" value="2.820"/>
